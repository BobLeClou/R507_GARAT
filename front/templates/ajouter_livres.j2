{% import 'utils.j2' as utils %}

<!DOCTYPE html>
<html lang="en">

{{ utils.head("Resultat recherche") }}

<body>
    {{ utils.jumbotron_top("Ajouter un livre") }}
    {{ utils.navbar([{"href":"/", "name":"Accueil"}, {"href":"/test", "name":"test"}]) }}

    <!-- Your content goes here -->
    <div class="container" style="margin-top:30px">
        <h4 style="text-align: center;">Ajouter un livre à la base de données</h4>

        <form action="/ajouter" method="post" style="text-align: center;">
            <input type="hidden" name="type" value="livres">
            <div class="form-group">
                <label for="titre">Titre:</label>
                <input type="text" class="form-control" id="titre" name="titre" required>
            </div>
            <div class="form-group">
                <label for="pitch">Pitch:</label>
                <input type="text" class="form-control" id="pitch" name="pitch" required>
            </div>
            <div class="form-group">
                <label for="id_auteur">Nom de l'auteur:</label>
                <input type="text" class="form-control" id="nom_auteur" name="nom_auteur" required>
            </div>
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" class="form-control" id="date" name="date" required>
            </div>
            <button type="submit" class="btn btn-success">Ajouter</button>
        </form>
        
        <div style="text-align: center; margin-top: 20px;">
            <a href="/" class="btn btn-primary">Retour</a>
        </div>
    </div>
</body>
</html>